<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="82dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="4dp"
    android:background="@drawable/rounded_background"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="4dp">

    <ImageView
        android:id="@+id/iconWallet"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bancoitaulogo"/>

    <TextView
        android:id="@+id/titleItemWallet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Transferencia Recibida"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/iconWallet"
        app:layout_constraintTop_toTopOf="@id/iconWallet"/>

    <TextView
        android:id="@+id/priceItemWallet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="100,000"
        android:textSize="13sp"
        android:textColor="#12c737"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/iconWallet"
        app:layout_constraintStart_toStartOf="@+id/titleItemWallet"/>

    <TextView
        android:id="@+id/typeMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â‚²"
        android:textColor="#12c737"
        android:textStyle="bold"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/priceItemWallet"
        app:layout_constraintStart_toEndOf="@+id/priceItemWallet"
        app:layout_constraintTop_toBottomOf="@+id/titleItemWallet"/>

    <TextView
        android:id="@+id/dateItemWallet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="03/10/2023"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/titleItemWallet" />


</androidx.constraintlayout.widget.ConstraintLayout>